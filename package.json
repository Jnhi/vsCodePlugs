{
  "name": "jnhi-plugin",
  "displayName": "多语言工具",
  "description": "无限进步！",
  "publisher": "Jnhi",
  "version": "0.1.3",
  "engines": {
    "vscode": "^1.56.0"
  },
  "categories": [
    "Other"
  ],
  "repository": "https://github.com/Jnhi/vsCodePlugs.git",
  "icon": "images/icon.png",
  "keywords": [
    "vscode",
    "plugin",
    "demo"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./dist/main.js",
  "scripts": {
    "updateFont": "node ./build/updateFont.js",
    "showFont": "open ./theme/vscode-10.html",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "contributes": {
    "productIconThemes": [
      {
        "id": "vscode-v1-icons",
        "label": "没啥卵用",
        "path": "./theme/product-icon-theme.json"
      }
    ],
    "configuration": {
      "title": "ClientTool配置",
      "properties": {
        "jnhi-plugin.regExp": {
          "type": "string",
          "default": "G_lang('$1')",
          "description": "多语言匹配格式,$1为匹配符,必须存在"
        },
        "jnhi-plugin.locLangExp": {
          "type": "string",
          "default": "language",
          "description": "多语言文本目录匹配字符串"
        }
      }
    },
    "commands": [
      {
        "command": "extension.updataLang",
        "title": "更新多语言字典"
      },
      {
        "command": "extension.changeText",
        "title": "替换文本"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "extension.changeText",
          "group": "navigation"
        },
        {
          "when": "editorHasSelection",
          "command": "extension.updataLang",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.56.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.13.14",
    "eslint": "^8.1.0",
    "fs": "^0.0.1-security",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "open": "^7.0.3",
    "readline": "^1.3.0",
    "typescript": "^4.4.4",
    "wawoff2": "^2.0.0",
    "webfont": "^11.2.26"
  },
  "dependencies": {
    "cnpm": "^7.1.0",
    "fs": "^0.0.1-security",
    "generator-code": "^1.6.4",
    "path": "^0.12.7",
    "readline": "^1.3.0",
    "tsc": "^2.0.3"
  }
}
